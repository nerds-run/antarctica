#!/usr/bin/env bash
#MISE description="Converge a role (no destroy - fast iteration)"
# Usage: mise run test:converge <role_name>
set -euo pipefail

ROLE="${1:?Usage: mise run test:converge <role_name>}"
# shellcheck source=/dev/null
source "$MISE_PROJECT_ROOT/.venv/bin/activate"
cd "$MISE_PROJECT_ROOT/ansible/roles/$ROLE"
molecule converge

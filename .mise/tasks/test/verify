#!/usr/bin/env bash
#MISE description="Run verify step only (after converge)"
# Usage: mise run test:verify <role_name>
set -euo pipefail

ROLE="${1:?Usage: mise run test:verify <role_name>}"
# shellcheck source=/dev/null
source "$MISE_PROJECT_ROOT/.venv/bin/activate"
cd "$MISE_PROJECT_ROOT/ansible/roles/$ROLE"
molecule verify

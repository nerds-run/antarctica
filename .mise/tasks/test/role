#!/usr/bin/env bash
#MISE description="Run Molecule test for a single role"
# Usage: mise run test:role <role_name>
set -euo pipefail

ROLE="${1:?Usage: mise run test:role <role_name>}"
# shellcheck source=/dev/null
source "$MISE_PROJECT_ROOT/.venv/bin/activate"
cd "$MISE_PROJECT_ROOT/ansible/roles/$ROLE"
molecule test
